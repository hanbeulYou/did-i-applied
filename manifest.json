{
  "manifest_version": 3,
  "name": "Did I Applied?",
  "version": "1.0",
  "description": "A Chrome extension to track job applications.",
  "permissions": ["storage", "activeTab"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/logo.webp",
      "48": "images/logo.webp",
      "128": "images/logo.webp"
    }
  },
  "icons": {
    "16": "images/logo.webp",
    "48": "images/logo.webp",
    "128": "images/logo.webp"
  },
  "content_scripts": [
    {
      "matches": ["https://www.wanted.co.kr/*"],
      "js": ["content.js"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "default-src 'self'; img-src 'self' https://*; object-src 'self'"
  }
}
